{
  "name": "{{ name }}",
  "version": "0.1.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "private": true,
  "scripts": {
    "postinstall": "command -v flow-typed && flow-typed install || true",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "test:e2e": "cross-env NODE_ENV=test jest tests/e2e",
    "test:unit": "cross-env NODE_ENV=test jest --coverage tests/unit",
    "test:sec": "nsp check",
    "test": "npm run test:unit && npm run test:sec && npm run lint && npm run test:e2e",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:css": "stylelint 'client/**/*.{vue,scss}' --syntax scss",
    "lint": "npm run lint:js && npm run lint:css",
    "precommit": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:unit && npm run test:sec && npm run lint"
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "no-empty-source": null,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "unit-whitelist": [
        "em",
        "rem",
        "vh",
        "%"
      ]
    }
  },
  "jest": {
    "globalSetup": "<rootDir>/tests/utils/global-setup.js",
    "setupFiles": [
      "<rootDir>/tests/utils/test-setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "vue",
      "json"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/client/$1"
    },
    "verbose": true
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.1",
    "@nuxtjs/dotenv": "^1.1.1",
    "await-to-js": "^2.0.1",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.4",
    "normalize.css": "^8.0.0",
    "nuxt": "^1.4.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.14",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-vue-app": "^2.0.0",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^3.10.0",
    "deepcopy": "^0.6.3",
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-flowtype-errors": "^3.5.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-unicorn": "^4.0.2",
    "eslint-plugin-vue": "^4.4.0",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "node-sass": "^4.8.3",
    "nsp": "^3.2.1",
    "postcss": "^6.0.21",
    "sass-loader": "^7.0.1",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.0.0",
    "stylelint-webpack-plugin": "^0.10.4",
    "vue-jest": "^2.5.0",
    "webpack": "^4.6.0"
  }
}
