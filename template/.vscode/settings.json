{
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,

  // Files
  "files.exclude": {
    "**/*.log": true,
    "**/*.log*": true,
    "**/dist": true,
    "**/coverage": true
  },

  "vetur.validation.script": true,
  "vetur.validation.style": true,
  "vetur.validation.template": true,
  "json.format.enable": true,
  "javascript.validate.enable": true,

  // Disables default checks:
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Linting:
  "eslint.enable": true,
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "stylelint.enable": true,

  // Testing:
  "jest.autoEnable": false
}
